<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="400.0" maxWidth="600.0" minHeight="800.0" minWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.vistaNuevaNave.controladorNuevaNave">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
         <children>
            <RadioButton fx:id="radioCorveta" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" selected="true" text="Corveta">
               <toggleGroup>
                  <ToggleGroup fx:id="naveSeleccionada" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioFragata" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Fragata" toggleGroup="$naveSeleccionada" />
            <RadioButton fx:id="radioDestructor" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Destructor" toggleGroup="$naveSeleccionada" />
            <RadioButton fx:id="radioCrucero" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Crucero" toggleGroup="$naveSeleccionada" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
         <children>
            <RadioButton fx:id="radioAcorazado" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Acorazado" toggleGroup="$naveSeleccionada" />
            <RadioButton fx:id="radioTitan" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Titán" toggleGroup="$naveSeleccionada" />
            <RadioButton fx:id="radioColoso" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Coloso" toggleGroup="$naveSeleccionada" />
            <RadioButton fx:id="radioInsignia" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="80.0" text="Insignia" toggleGroup="$naveSeleccionada" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Nombre:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombreNave" minWidth="400.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Propulsión:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="propulsion" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Armadura:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armadura" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="S.D.:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="sistemaDefensivo" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Escudo:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="escudo" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Armamento 1:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento1" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Armamento 2:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento2" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Armamento 3:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento3" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Armamento 4:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento4" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Armamento 5:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento5" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Armamento 6:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento6" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="100.0" text="Armamento 7:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento7" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
            <Label minWidth="80.0" text="Armamento 8:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="armamento8" editable="true" maxWidth="150.0" minWidth="150.0" visibleRowCount="5" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label fx:id="aparienciaNave" minWidth="100.0" text="Apariencia:">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <Button minHeight="60.0" minWidth="150.0" mnemonicParsing="false" onAction="#botonInsertarImagen" text="Insertar Foto" />
            <ImageView fx:id="preview" fitHeight="100.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="30.0" left="20.0" top="30.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
         <children>
            <Button cancelButton="true" minHeight="60.0" minWidth="150.0" mnemonicParsing="false" onAction="#botonCancelar" text="Cancelar">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Button defaultButton="true" minHeight="60.0" minWidth="150.0" mnemonicParsing="false" onAction="#botonNuevaNave" text="Añadir Nave">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
